                                          img(alt='', draggable='false', src='images/single-page/5_thumb.jpg')
                                        li
                                          img(alt='', draggable='false', src='images/single-page/6_thumb.jpg')
                                        // items mirrored twice, total of 12
                                .col-sm-12.col-lg-5.col-xs-12
                                  .summary.entry-summary
                                    .ad-preview-details
                                      a(href='#')
                                        h4 CHACHA'S HOSTEl
                                      .overview-price
                                        span RS 8,000
                                      .clearfix
                                      p MSZ IS GREAT 
                                      ul.car-info.col-md-6.col-sm-6
                                        li
                                          span Timing
                                          p 8:00AM-8:00PM
                                        li
                                          span WIFI 
                                          p Available
                                        li
                                          span No of Persons
                                          p 4 
