                        #ad-preview.quick-view-modal.modalopen(tabindex='-1', role='dialog', aria-hidden='true')
                          .modal-dialog.modal-lg.ad-modal
                            button.close.close-btn.popup-cls(aria-label='Close', data-dismiss='modal', type='button')
                              i.fa-times.fa
                            .modal-content.single-product
                              .diblock
                                .col-lg-7.col-sm-12.col-xs-12
                                  .clearfix
                                  .flexslider.single-page-slider
                                    .flex-viewport
                                      ul.slides.slide-main
                                        li
                                          img(alt='', src='images/single-page/1.jpg', title='')
                                        li
                                          img(alt='', src='images/single-page/2.jpg', title='')
                                        li.flex-active-slide
                                          img(alt='', src='images/single-page/3.jpg', title='')
                                        li
                                          img(alt='', src='images/single-page/4.jpg', title='')
                                        li
                                          img(alt='', src='images/single-page/5.jpg', title='')
                                        li
                                          img(alt='', src='images/single-page/6.jpg', title='')
