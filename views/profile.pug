    // =-=-=-=-=-=-= Light Header =-=-=-=-=-=-=
    .colored-header
      // Top Bar
      .header-top
        .container
          .row
            // Header Top Left
            .header-top-left.col-md-8.col-sm-6.col-xs-12.hidden-xs
              ul.listnone
                li
                  a(href='about.html')
                    i.fa.fa-heart-o(aria-hidden='true')
                    |  About
                li
                  a(href='faqs.html')
                    i.fa.fa-folder-open-o(aria-hidden='true')
                    |  FAQS
            // Header Top Right Social
            .header-right.col-md-4.col-sm-6.col-xs-12
              .pull-right
                ul.listnone
                  li
                    a(href='logout')
                      i.fa.fa-sign-in
                      |  Logout
                
      // Top Bar End
      // Navigation Menu
      nav#menu-1.mega-menu
        // menu list items container
        section.menu-list-items
          .container
            .row
              .col-lg-12.col-md-12
                // menu logo
                ul.menu-logo
                  li
                    a(href='index')
                      img(src='images/logo21.png', alt='HOSTLYTE')
                // menu links
                ul.menu-links
                  // active class
                  li
                    a(href='javascript:void(0)')
                      | Home 
                      i
                  li
                    a(href='javascript:void(0)')
                      | Listing 
                      i
                  li
                    a(href='javascript:void(0)')
                      | Categories 
                      i
                  li
                    a(href='contact') Contact 
                ul.menu-search-bar
                  li
                    a.btn.btn-light(href='postad')
                      i.fa.fa-plus(aria-hidden='true')
                      |  Post Free Ad
    // Navigation Menu End
    // =-=-=-=-=-=-= Light Header End  =-=-=-=-=-=-=
    // Small Breadcrumb
    .small-breadcrumb
      .container
        .breadcrumb-link
          ul
            li
              a(href='index') Home
            li
              a.active(href='#') Profile
    // Small Breadcrumb
    // =-=-=-=-=-=-= Main Content Area =-=-=-=-=-=-=
    .main-content-area.clearfix
      // =-=-=-=-=-=-= Latest Ads =-=-=-=-=-=-=
      section.section-padding.gray
        // Main Container
        .container
          // Row
          .row
            // Middle Content Area
            .col-md-12.col-xs-12.col-sm-12
              section.search-result-item
                a.image-link(href='#')
                  img.image(alt='', src='images/users/9.jpg')
                .search-result-item-body
                  .row
                    .col-md-5.col-sm-12.col-xs-12
                      h4.search-result-item-heading
                        a(href='#') #{result.name}
                      p.description You logged in at: #{result.date}
                      span.label.label-success Vendor
                    .col-md-7.col-sm-12.col-xs-12
                      .row.ad-history
                        .col-md-4.col-sm-4.col-xs-12
                          .user-stats
                            h2  0
                            small  Ads Listed  
                    
                        
              .dashboard-menu-container
                ul
                  li.active
                    a(href='profile')
                      .menu-name  Profile 
              
                    a(href='/logout')
                      .menu-name Logout
            // Middle Content Area  End
            // Row End
            br
            .row
              // Middle Content Area
              .col-md-12.col-xs-12.col-sm-12
                // Row
                .profile-section.margin-bottom-20
                  .profile-tabs
                    ul.nav.nav-justified.nav-tabs
                      li.active
                        a(href='#profile', data-toggle='tab') Profile
                    
                    .tab-content
                      #profile.profile-edit.tab-pane.fade.in.active
                        h2.heading-md Manage your Name, ID and Email Addresses.
                        p Below are the name and email addresses on file for your account.
                        dl.dl-horizontal
                          dt
                            strong Your name 
                          dd
                            | #{result.name}
                          dt
                            strong Email Address 
                          dd
                            | #{result.email}
                          dt
                            strong Phone Number 
                          dd
                            | #{result.phone}
                          dt
                            strong You are a 
                          dd
                            | Vendor
                          dt
                            strong Address 
                          dd
                            | #{result.address}
                      #edit.profile-edit.tab-pane.fade
                        h2.heading-md Manage your Security Settings
                        p Manage Your Account
                        .clearfix
                        form
                          .row
                            .col-md-6.col-sm-6.col-xs-12
                              label Your Name 
                              input.form-control.margin-bottom-20(type='text')
                            .col-md-6.col-sm-6.col-xs-12
                              label
                                | Email Address 
                                span.color-red *
                              input.form-control.margin-bottom-20(type='text')
                            .col-md-12.col-sm-12.col-xs-12
                              label
                                | Contact Number 
                                span.color-red *
                              input.form-control.margin-bottom-20(type='text')
                            .col-md-6.col-sm-12.col-xs-12.margin-bottom-20
                              label
                                | Country 
                                span.color-red *
                              select.form-control
                                option(value='0') SriLanka
                                option(value='1') Australia
                                option(value='2') Bahrain
                                option(value='3') Canada
                                option(value='4') Denmark
                                option(value='5') Germany
                            .col-md-6.col-sm-12.col-xs-12.margin-bottom-20
                              label
                                | City 
                                span.color-red *
                              select.form-control
                                option(value='0') London
                                option(value='1') Edinburgh
                                option(value='2') Wales
                                option(value='3') Cardiff
                                option(value='4') Bradford
                                option(value='5') Cambridge
                            .col-md-12.col-sm-12.col-xs-12
                              label
                                | Address 
                                span.color-red *
                              textarea.form-control.margin-bottom-20(rows='3')
                          .row.margin-bottom-20
                            .form-group
                              .col-md-9
                                .input-group
                                  span.input-group-btn
                                    span.btn.btn-default.btn-file
                                      | Browse… 
                                      input#imgInp(type='file')
                                  input.form-control(type='text', readonly='')
                              .col-md-3
                                img#img-upload.img-responsive(src='images/users/2.jpg', alt='')
                          .clearfix
                          .row
                            .col-md-8.col-sm-8.col-xs-12
                              .form-group
                                .skin-minimal
                                  ul.list
                                    li
                                      input#minimal-checkbox-7(type='checkbox')
                                      label(for='minimal-checkbox-7')
                                        | i agree 
                                        a(href='#') Terms of Services
                            .col-md-4.col-sm-4.col-xs-12.text-right
                              
                              input.btn.btn-theme.pull-right(type="submit", value="Submit")
                      #payment.profile-edit.tab-pane.fade
                        h2.heading-md Manage your Package Settings
                        p Below are the payment options for your account.
                        br
                        form#sky-form.sky-form(action='#', novalidate='')
                          // Checkout-Form
                          dl.dl-horizontal
                            dt
                              strong Current Plan
                            dd
                              | Premium
                            dt
                              strong Expiration Date 
                            dd
                              | 2nd January 2017
                          .row
                            .col-sm-12.col-md-12.margin-bottom-20
                              label
                                | Select Plan You Want To Change
                                span.color-red *
                              select.form-control
                                option(value='0') Free
                                option(value='1') Premium
                                option(value='2') Advanced
                          button.btn.btn-sm.btn-default(type='button') Cancel
                          button.btn.btn-sm.btn-theme(type='submit') Save Changes
                          // End Checkout-Form
                      #settings.profile-edit.tab-pane.fade
                        h2.heading-md Manage your Notifications.
                        p Below are the notifications you may manage.
                        br
                        form
                          .skin-minimal
                            ul.list
                              li
                                input#minimal-checkbox-1(type='checkbox')
                                label(for='minimal-checkbox-1') Send me email notification when Ad is processed
                              li
                                input#minimal-checkbox-2(type='checkbox')
                                label(for='minimal-checkbox-2') Send me email notification when user comment
                              li
                                input#minimal-checkbox-3(type='checkbox')
                                label(for='minimal-checkbox-3') Send me email notification for the latest update
                              li
                                input#minimal-checkbox-4(type='checkbox')
                                label(for='minimal-checkbox-4')  Receive our monthly newsletter
                              li
                                input#minimal-checkbox-5(type='checkbox')
                                label(for='minimal-checkbox-5') Email notification
                          .button-group.margin-top-20
                            button.btn.btn-sm.btn-default(type='button') Reset
                            button.btn.btn-sm.btn-theme(type='submit') Save Changes
                // Row End
                // Middle Content Area  End
                // Main Container End
                // =-=-=-=-=-=-= Ads s End =-=-=-=-=-=-=
                // =-=-=-=-=-=-= FOOTER =-=-=-=-=-=-=
                .footer-top
                  .container
                    .row
                      .col-md-3.col-sm-6.col-xs-12
                        // Info Widget
                        .widget
                          .logo
                            img(alt='HOSTLYTE', src='images/logo12.png')
                          p DESCRIPTION DAALO
                          ul
                            li
                              img(src='images/appstore.png', alt='')
                            li
                              img(src='images/googleplay.png', alt='')
                        // Info Widget Exit
                      .col-md-3.col-sm-6.col-xs-12
                        // Follow Us
                        .widget.socail-icons
                          h5 Follow Us
                          ul
                            li
                              a.fb(href='')
                                i.fa.fa-facebook
                              span Facebook
                            li
                              a.twitter(href='')
                                i.fa.fa-twitter
                              span Twitter
                            li
                              a.linkedin(href='')
                                i.fa.fa-linkedin
                              span Linkedin
                            li
                              a.googleplus(href='')
                                i.fa.fa-google-plus
                              span Google+
                        // Follow Us End
                      .col-md-6.col-sm-6.col-xs-12
                        // Newslatter
                        .widget.widget-newsletter
